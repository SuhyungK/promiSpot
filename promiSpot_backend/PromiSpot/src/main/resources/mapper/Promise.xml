<?xml version="1.0" encoding="UTF-8"?>



<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.promispot.promise.model.mapper.PromiseMapper">


	<!-- 약속 생성  -->
	<insert id="createPromise" parameterType="promiseEntity">
		insert into promises(promise_title, promise_date, promise_vote_is_finish, promise_schedule_is_finish)
		values(#{promiseTitle}, #{promiseDate}, #{promiseVoteIsFinish}, #{promiseScheduleIsFinish})	
	</insert>
	
	
	<!-- 약속 하나 조회  -->
	<select id="getPromise" parameterType="int" resultType="PromiseEntity"> 
		select * from promises where promise_seq = #{promiseSeq}
	</select>
	
	<!-- 한 회원의 약속 전부 조회  -->
	<select id="getPromiseList" parameterType="int" resultType="PromiseEntity"> 
		select * from promises where member_seq = #{memberSeq}
	</select>
	
	
	<!-- 약속 변경  -->
	<update id="modifyPromise" parameterType="PromiseEntity">
		update promises
		<trim prefix="set" suffixOverrides=",">
			<if test="promiseTitle != null">promise_title = #{promiseTitle},</if>
			<if test="promiseDate != null">promise_date = #{promiseDate},</if>
			<if test="promiseVoteIsFinish != null">promise_vote_is_finish = #{promiseVoteIsFinish},</if>
			<if test="promiseScheduleIsFinish != null">promise_schedule_is_finish = #{promiseScheduleIsFinish},</if>
		</trim>
		where promise_seq = #{promiseSeq}
	</update>


	<!-- 약속 삭제 -->
	<delete id="removeSchedule" parameterType="int">
		delete from promises
		where promise_seq = #{promiseSeq}
	</delete>


</mapper>