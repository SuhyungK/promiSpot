<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.promispot.member.model.mapper.FriendMapper">

	<!-- 친구 신청 -->
	<select id="requestFriend" parameterType="FriendRequestEntity">
	</select>
	
	<!-- 친구 신청 조회 (나한테 온 친구 신청, 내가 신청한 친구 보기) -->
	<select id="getRequestFriend" parameterType="int" resultType="FriendRequestEntity">
	
	</select>
	
	<!-- 친구 신청 승인 -->
	<update id="approvalFriend" parameterType="int">
	</update>
	
	<!-- 친구 신청 거절 -->
	<delete id="rejectFriend" parameterType="int">
	</delete>
	
	<!-- 친구 정보 조회 (친구 찾기) -->
	<select id="findFriend" parameterType="string" resultType="MemberEntity">
	</select>
	
	<!-- 친구 목록 조회 -->
	<select id="findFriendList" resultType="MemberEntity">
	</select>

</mapper>